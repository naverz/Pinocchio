<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HSVPicker"
        tools:targetApi="31"
        >

        <activity
            android:name="io.github.naverz.pinocchio.hsvpicker.sample.LaunchActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.naverz.pinocchio.hsvpicker.sample.MainActivityByKotlin"
            android:exported="true"
            />
        <activity
            android:name="io.github.naverz.pinocchio.hsvpicker.sample.MainActivityCompose"
            android:exported="true"
            />
        <activity
            android:name="io.github.naverz.pinocchio.hsvpicker.sample.MainActivityByJava"
            android:exported="true"
            />

    </application>

</manifest>